type User {
  id: ID! @id
  username: String! @unique
  email: String! @unique
  firstName: String!
  lastName: String @default(value: "")
  bio: String
  posts: [Post!]!
  likes: [Like!]!
  comments: [Comment!]!
  followers: [User!]! @relation(name: "FollowRelation")
  followings: [User!]! @relation(name: "FollowRelation")
}

type Post {
  id: ID! @id
  user: User!
  files: [File!]!
  location: String
  caption: String!
  likes: [Like!]!
  comments: [Comment!]!
}

type Like{
  id: ID! @id
  user: User!
  post: Post!
}

type Comment{
  id: ID! @id
  user: User!
  text: String!
  post: Post!
}

type File{
  id: ID! @id 
  url: String!
  post: Post!
}

type Chatroom{
  id: ID! @id
  participants: [User!]!
  messages: [Message!]!
}

type Message{
  id: ID! @id
  text: String!
  chatroom: Chatroom!
  sender: User! @relation(name: "MessageSent")
  receiver: User! @relation(name: "MessageReceived")
  created: DateTime! @createdAt
}